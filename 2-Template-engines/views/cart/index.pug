extends ../layouts/common
block content

    h1 ListProduct

    a(href="/cart/create") AddProduct

    form(action="/cart/search", method="GET")
        input(type="text", name="q" ,value= queryText)
        button.btn.btn-primary Search

    ul
        each product in products
            li
                span= product.name 
                span &nbsp
                a(href="/cart/view/" + product.id) view